<% include partials/header %>
    
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>YelpCamp</h1>
            <p>Explore awesome campgrounds all over the world</p>
            <p>
                <a class="btn btn-large btn-primary" href="/campgrounds/new">Add New Campgrounds!</a>
            </p>
        </div>
    </header>
    
    <div class="row">
        <div class="col-lg-12">
            <h3>Top Campgrounds</h3>
        </div>
    
    </div>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% campgrounds.forEach(function(camp){ %>
            <div class="col-md-3 col-sm-6" >
                <div class="thumbnail">
                    <img class="img-fluid" alt="image" src="<%= camp.image %>">
                    <div class="caption"><h4><%= camp.name %></h4></div>
                </div>
            </div>
        <% }); %>
    </div>
</div>
<% include partials/footer %>
